@{
    ViewData["Title"] = "Home Page";
}
        <div ng-app="app" ng-controller="seasoncontroller">
           <div class="container-fluid">
               <div class="row" >
                    <div class="col-sm-4" ng-repeat="league in leagues" style="background-color:lavender;" ng-click="clickMe($event);">
                        <div class="league">
                            {{league.league}}
                        </div>
                        <div class="year">
                            {{league.year}}
                        </div>
                   </div>                   
                </div>
            </div>
        </div>



